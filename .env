# Configurações de Segurança do ChordChart Pro
# ⚠️  IMPORTANTE: Copie este arquivo para .env e altere as chaves em produção!

# Chave secreta para sessões (GERE UMA NOVA EM PRODUÇÃO!)
SECRET_KEY=your-super-secret-key-change-this-in-production-123456789

# Ambiente (development/production)
FLASK_ENV=development

# CORS - URLs permitidas (use * apenas em desenvolvimento)
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Configurações de banco de dados (se necessário)
DATABASE_URL=sqlite:///songs.db

# Configurações de segurança adicionais
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Rate limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT=300 
